@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = "_LayoutAccount.cshtml";
}
<section class="position-relative h-100 pb-4">

    <!-- Sign in form -->
    <div class="container d-flex flex-wrap justify-content-center justify-content-xl-start h-100">
        <div class="w-100 align-self-end pb-4" style="max-width: 526px;">
            <h1 class="text-center text-xl-start">Welcome Back</h1>
            <p class="text-center text-xl-start pb-3 mb-3">Don’t have an account yet? <a href="account-signup.html">Register here.</a></p>
            <form class="needs-validation mb-2" id="account" method="post" novalidate>
                <div class="position-relative mb-4">
                    <label asp-for="Input.Email" class="form-label fs-base">Email</label>
                    <input asp-for="Input.Email" type="email" id="email" class="form-control form-control-lg" required>
                    <div asp-validation-formaction="Input.Email" class="invalid-feedback position-absolute start-0 top-100">Please enter a valid email address!</div>
                </div>
                <div class="mb-4">
                    <label asp-for="Input.Password" class="form-label fs-base">Password</label>
                    <div class="password-toggle">
                        <input type="Input.Password" id="password" class="form-control form-control-lg" required>
                        <label class="password-toggle-btn" aria-label="Show/hide password">
                            <input class="password-toggle-check" type="checkbox">
                            <span class="password-toggle-indicator"></span>
                        </label>
                        <div class="invalid-feedback position-absolute start-0 top-100">Please enter your password!</div>
                    </div>
                </div>
                <div class="mb-4">
                    <div class="form-check">
                        <input type="checkbox" id="remember" class="form-check-input">
                        <label for="remember" class="form-check-label fs-base">Remember me</label>
                    </div>
                </div>
                <button id="login-submit" type="submit" class="btn btn-primary shadow-primary btn-lg w-100">Sign in</button>
            </form>
            <a href="#" class="btn btn-link btn-lg w-100">Forgot your password?</a>
            <hr class="my-4">
            <h6 class="text-center mb-4">Or sign in with your social network</h6>
                <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
            <div class="row row-cols-1 row-cols-sm-2">
                <div class="col mb-3">

                    <button class="btn btn-icon btn-secondary btn-google btn-lg w-100" value="Google" title="Log in using your Google Account" name="provider" type="submit">
                        <i class="bx bxl-google fs-xl me-2"></i>
                        Google
                    </button>
                </div>
                <div class="col mb-3">
                    <a href="#" class="btn btn-icon btn-secondary btn-facebook btn-lg w-100">
                        <i class="bx bxl-facebook fs-xl me-2"></i>
                        Facebook
                    </a>
                </div>
            </div>
            </form>
        </div>
        <div class="w-100 align-self-end">
            <p class="nav d-block fs-xs text-center text-xl-start pb-2 mb-0">
                &copy; All rights reserved. Made by
                Old Barom
            </p>
        </div>
    </div>

    <!-- Background -->
    <div class="position-absolute top-0 end-0 w-50 h-100 bg-position-center bg-repeat-0 bg-size-cover d-none d-xl-block" style="background-image: url(../../img/account/signin-bg.jpg);"></div>
</section>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}